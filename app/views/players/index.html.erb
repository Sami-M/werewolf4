<% provide(:title, "Listing players") %>
<h1>Listing players</h1>
  <table>
    <tr>
      <th>User</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Alive</th>
      <th>Wolf</th>
      <th>Voting</th>
      <th>Score</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @players.each do |player| %>
        <tr>
          <td><%= player.user_id %></td>
          <td><%= player.lat %></td>
          <td><%= player.lng %></td>
          <td><%= player.alive %></td>
          <td><%= player.wolf %></td>
          <td><%= player.voting %></td>
          <td><%= player.score%></td>
          <td><%= link_to 'Show', player %></td>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
          <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </table>

  <br />

  <%= link_to 'New Player', new_player_path %>
  <div id="push"></div>
